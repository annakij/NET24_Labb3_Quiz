<Window x:Class="Labb3.Dialogs.CategoryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb3.Dialogs"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp" 
        xmlns:viewmodel="clr-namespace:Labb3.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:ConfigurationViewModel}"
        mc:Ignorable="d" Height="350" Width="500" 
        WindowStartupLocation="CenterOwner" WindowStyle="None">
    
    <Grid Background="#a6d0de">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <Label Content="Categories"
                   Foreground="#831100"
                   FontWeight="Bold"
                   FontSize="18"
                   Margin="10, 0"/>
            
            <ListBox Background="BlanchedAlmond"
                     Height="240"
                     Padding="5" 
                     Margin="10, 0"
                     SelectionMode="Single"
                     TabIndex="1"
                     SelectedItem="{Binding ActiveCategory, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     ItemsSource="{Binding Categories}" >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            
            <StackPanel Grid.Column="0"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">

                <Button Grid.Column="0"
                        Background="BlanchedAlmond"
                        Width="80"
                        Height="20"
                        Margin="10"
                        Content="{fa:Icon Plus}">
                </Button>

                <Button Width="80"
                        Height="20"
                        Margin="0, 10"
                        Background="BlanchedAlmond"
                        Content="{fa:Icon Minus}">
                </Button>

            </StackPanel>
        </StackPanel>
       

        <StackPanel Grid.Column="1" >
            <Label Content="Create new Category" 
                   FontSize="14"
                   Margin="10, 70, 10, 0"
                   FontWeight="DemiBold"
                   Foreground="#831100"/>
            <Label Content="Categoryname:"
                   FontWeight="DemiBold"
                   Margin="10, 20, 10, 0"/>
            
            <TextBox Margin="10, 0, 10, 0"
                     Height="20"
                     Background="BlanchedAlmond"
                     Text="{Binding ActiveCategory.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <StackPanel Orientation="Vertical"
                        VerticalAlignment="Center">
                
                <Button Content="Save" 
                        Width="70"
                        Margin="10, 30, 0, 0"
                        Background="BlanchedAlmond"/>

                <Button Content="Cancel"
                        Width="70"
                        Margin="10, 10, 0, 0"
                        Background="BlanchedAlmond"
                        Click="Button_Click"/>
            </StackPanel>
        </StackPanel>


    </Grid>
</Window>
